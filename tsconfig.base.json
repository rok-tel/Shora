// tsconfig.base.json
{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "lib": ["DOM", "ESNext"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "incremental": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "paths": {
        "@shora/common/*": ["common/src/*"]
      }
    }
  }
  