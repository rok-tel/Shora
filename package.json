{
    "name": "shora",
    "private": true,
    "workspaces": [
      "apps/api",
      "apps/web",
      "apps/worker",
      "common"
    ],
    "scripts": {
      "build:common": "cd common && yarn build",
      "build:web": "cd apps/web && yarn build",
      "build:api": "cd apps/api && yarn build",
      "build:worker": "cd apps/worker && yarn build",
      "copy:next": "rm -rf apps/api/.next && cp -r apps/web/.next apps/api/.next",
      "build": "yarn build:common && yarn build:web && yarn build:api && yarn copy:next"
    },
    "devDependencies": {
      "typescript": "^5.0.4",
      "@types/node": "^20.1.4",
      "ts-node-dev": "^2.0.0"
    }
  }